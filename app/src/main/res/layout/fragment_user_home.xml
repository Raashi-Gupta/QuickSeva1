<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_home">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/emer_act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency Service"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_margin="50dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="25dp"
            tools:ignore="MissingConstraints" />





        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_below="@+id/emer_act"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/uname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Name"
            android:textColorHint="@color/material_dynamic_neutral60"
            android:layout_below="@id/name"
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/black"
            />







        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact number"
            android:layout_below="@id/uname"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/black"

            />


        <EditText
            android:id="@+id/ucontact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:textColorHint="@color/material_dynamic_neutral60"
            android:layout_below="@id/contact"
            android:layout_marginHorizontal="30dp"
            android:ems="10"
            android:textColor="@color/black"
            android:inputType="phone"/>




        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location/Landmark"
            android:layout_below="@id/ucontact"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/black"

            />


        <EditText
            android:id="@+id/ulocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nearest Location/Landmark"
            android:textColorHint="@color/material_dynamic_neutral60"
            android:layout_below="@id/email"
            android:layout_marginHorizontal="30dp"
            android:ems="10"
            android:textColor="@color/black"/>








        <TextView
            android:id="@+id/toa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ulocation"
            android:text="Type of accident"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/black"
            />
        <RadioGroup
            android:id="@+id/utoa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toa"
            android:layout_marginHorizontal="30dp"
            >
            <RadioButton
                android:id="@+id/aot_ra"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:text="Road Accident"/>
            <RadioButton
                android:id="@+id/aot_fa"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Fire Accident"
                android:textColor="@color/black"
                />
            <RadioButton
                android:id="@+id/others"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Others"
                android:textColor="@color/black"
                />
        </RadioGroup>


        <Button
            android:id="@+id/button_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/utoa"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/red"
            android:text="Notify"
            android:textColor="@color/white" />

    </RelativeLayout>
</FrameLayout>